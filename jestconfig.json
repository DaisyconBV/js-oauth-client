{
	"transform": {
		"^.+\\.(t|j)sx?$": "ts-jest"
	},
	"moduleNameMapper": {
		"src/(.*)": "<rootDir>/src/$1",
		"tests/(.*)": "<rootDir>/tests/$1"
	},
	"testEnvironment": "jsdom",
	"testRegex": "(/tests/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
